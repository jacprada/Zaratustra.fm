<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation">

    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Zaratustra.fm</a></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li class="active"><a href="/users">Browse</a></li>
        <li class="has-dropdown">
          <% if logged_in? %>
          <a><%= current_user.try(:username) %></a>
          <ul class="dropdown">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Add Album", new_album_path %></li>
            <li><%= link_to "Add Playlist", new_playlist_path %></li>
            <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
            <li class="active"><%= link_to "Logout", logout_path, method: "delete" %></li>
          </ul>
          <% else %>
          <a>Get In</a>
          <ul class="dropdown">
            <li><%= link_to "Login", login_path %></li>
            <li><%= link_to "Sign Up", new_user_path %></li>
          </ul>
          <% end %>
        </li>
      </ul>
    </section>

  </nav>
</div>
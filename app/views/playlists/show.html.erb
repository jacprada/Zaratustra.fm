<div id="wrap">

  <div class="panel callout radius">
    <h3 class="text-center"><%= @playlist.user.name %></h3>
    <div class="text-center"><%= image_tag @playlist.user.profile_image.thumb.url %></div>
    <h5 class="text-center">@<%= @playlist.user.username %></h5>
    <h5 class="text-center"><%= @playlist.user.bio %></h5>
  </div>

  <dl class="sub-nav hide-for-small-only">
    <dt class="center">Playlists:</dt>
    <dd><%= link_to "All", @playlist.user %></dd>
    <dd><%= render partial: "playlist", collection: @plays.order('LOWER(name)') %></dd>
  </dl>

  <div class="row" data-equalizer>
    <%= render @playlist.albums.order('LOWER(artist)') %>
  </div>

  <div id="push"></div>
</div>

<div id="footer">
  <% if current_user == @playlist.user %>
  <li id="footer_li"><%= link_to 'Edit Playlist', edit_playlist_path(@playlist) %></li>
  <li id="footer_li"><%= link_to 'Delete Playlist', @playlist, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</div>